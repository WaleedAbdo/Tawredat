@model RegisterViewModel

<div class="row">
    <div class="col-md-6">
<form class="log" asp-controller="Account" asp-action="Register" method="post" role="form">
  @*  <h4>Create a new account</h4>*@
            <h1 class="text-info">انشاء حساب</h1>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email" class="col-md-2"></label>
        <div class="col-md-12">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-md-2"></label>
        <div class="col-md-12">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="col-md-2"></label>
        <div class="col-md-12">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="col-md-6"></label>
        <div class="col-md-12">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="RoleSelected" class="col-md-2"></label>
        <div class="col-md-12">
            <select asp-for="RoleSelected" asp-items="@Model.RoleList" class="form-control">
                <option disabled selected>--Select Role--</option>
            </select>
        </div>
    </div>
      @if (User.Identity.IsAuthenticated && User.IsInRole("مدير مشتريات"))
    {
        <div class="form-group">
            <label asp-for="Status" class="col-md-2"></label>
            <div class="col-md-10">

                <select asp-for="Status" class="form-control">
                    <option disabled selected>--Select Role--</option>
                    <option value="طبيب">طبيب</option>


                </select>

            </div>
        </div>
        
    }
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <div class="form-group">
            <label asp-for="Status" class="col-md-2"></label>
            <div class="col-md-12">

                <select asp-for="Status" class="form-control">
                    <option disabled selected>--Select Role--</option>
                    <option value="مدير مشتريات">مدير مشتريات</option>
                    <option value="تاجر">تاجر</option>

                </select>
            </div>
        </div>
    }

    <div class="form-group">
        <div class="col-md-3">
            <button type="submit" class="btn btn-success form-control">Register</button>
        </div>
    </div>
</form>
    </div>
</div>

@section Scripts{ 
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}